# 前端环境配置示例文件
# 复制此文件为 .env.local 并填入实际配置值

# API 基础配置
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# 应用配置
VITE_APP_NAME=DianDian智慧物流平台
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# 认证配置
VITE_AUTH_TOKEN_KEY=access_token
VITE_AUTH_REFRESH_KEY=refresh_token
VITE_AUTH_TENANT_KEY=tenant_id

# 地图配置 (选择一个地图服务商)
# 高德地图
VITE_AMAP_KEY=your-amap-api-key
VITE_AMAP_SECRET=your-amap-secret

# 百度地图
VITE_BAIDU_MAP_KEY=your-baidu-map-key

# 腾讯地图
VITE_TENCENT_MAP_KEY=your-tencent-map-key

# WebSocket配置
VITE_WS_BASE_URL=ws://localhost:8000
VITE_GPS_WS_ENDPOINT=/api/gps/ws/realtime
VITE_AI_WS_ENDPOINT=/api/ai/ws/events

# Server-Sent Events配置
VITE_SSE_BASE_URL=http://localhost:8000
VITE_SSE_RETRY_INTERVAL=5000

# 上传配置
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 功能开关
VITE_ENABLE_GPS_TRACKING=true
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_REALTIME_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=false

# 调试配置
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
VITE_ENABLE_MOCK_DATA=false

# 性能配置
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600000

# 第三方服务集成
# Sentry错误监控
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=development

# Google Analytics
VITE_GA_MEASUREMENT_ID=your-ga-measurement-id

# 微信小程序配置 (如果需要)
VITE_WECHAT_APP_ID=your-wechat-app-id

# 企业微信配置
VITE_WECOM_CORP_ID=your-wecom-corp-id

# 多语言配置
VITE_DEFAULT_LOCALE=zh-CN
VITE_SUPPORTED_LOCALES=zh-CN,en-US

# 主题配置
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# CDN配置 (生产环境)
VITE_CDN_BASE_URL=https://cdn.your-domain.com
VITE_STATIC_ASSETS_URL=https://static.your-domain.com